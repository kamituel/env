startup_message off

caption always '%{= kG}[ %{G}%H %{g}][ %{=kw}%?%-Lw%?%{r}(%{W}%n*%f%t%?(%u)%?%{r})%{w}%?%+Lw%?%?%= %{g}][%{B}%Y-%m-%d %{W}%c %{g}]'

bindkey -k k5 prev # F5 for previous window
bindkey -k k6 next # F6 for next window

termcapinfo xterm* ti@:te@ # scroll in VIM

vbell "off" # no blinking
